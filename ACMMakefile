COMPILER_FLAGS = -Wall -Wextra -g -O0 -D_GCC_DEBUG -D_DEBUG

JAVAC = $(JAVA_HOME)/bin/javac

CFLAGS = $(COMPILER_FLAGS)
CXXFLAGS = $(COMPILER_FLAGS)

find = find . -mindepth 1 -maxdepth 1 -type f

ctargets = $(shell $(find) | egrep '\.(c|cpp)$$' | sed -r 's|^\./||;s|\.[^.]+$$||')

jtargets = $(shell $(find) | egrep '\.java$$' | sed -r 's|\.java$$|.class|')

all: $(ctargets) $(jtargets)

%.class: %.java
	$(JAVAC) $<

clean:
	$(RM) $(ctargets) *.class

# vim:noexpandtab:
